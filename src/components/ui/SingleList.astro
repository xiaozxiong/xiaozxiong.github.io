---
interface SingleItem {
    name: string;
    time: string;
}

interface Props {
    listTitle: string;
    listItems: SingleItem[];
}

const { listTitle, listItems } = Astro.props;
---

<h2 class="text-2xl font-bold mb-6 border-b">
    {listTitle}
</h2>

<ul class="list-disc pl-5 space-y-3">
    {
        listItems.map((item) => (
            // 1. Remove 'flex' and layout classes from the <li>
            <li>
                {/* 2. Create a wrapper div for the Flexbox layout */}
                <div class="flex justify-between items-baseline">
                    <span class="text-base">{item.name}</span>
                    <span class="text-base text-gray-500 ml-4 whitespace-nowrap">
                        {item.time}
                    </span>
                </div>
            </li>
        ))
    }
</ul>
