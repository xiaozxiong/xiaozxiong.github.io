---
import type { Teaching } from "@/types/cv";

interface Props {
    listTitle: string;
    listItems: Teaching[];
}

const { listTitle, listItems } = Astro.props as Props;
---

<h2 class="text-2xl font-bold mb-6 border-b">
    {listTitle}
</h2>

<ul class="list-disc pl-5 space-y-2">
  {
    listItems.map((item) => (
      <li>
        <div class="flex justify-between items-baseline">
          <span class="text-base">
            <strong>{item.role}</strong>, {item.course},
            <span class="text-gray-600"> {item.institution}</span>
          </span>

          <span class="text-base text-gray-500 ml-4 whitespace-nowrap">
            {item.time}
          </span>
        </div>
      </li>
    ))
  }
</ul>

